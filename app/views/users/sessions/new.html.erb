<h2 class="userlabel">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field">
    <p class="userlabel"><%= f.label :login %></p><br />
    <p class="usertextfield"><%= f.text_field :login %></p> 
  </div>

  <div class="field">
    <p class="userlabel"><%= f.label :password %></p><br />
    <p class="usertextfield"><%= f.password_field :password, autocomplete: "off" %></p>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <p class="userlabel"><%= f.label :remember_me %></p><br>
      <%= f.check_box :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => 'submitbutton' %>
  </div>
<% end %>
